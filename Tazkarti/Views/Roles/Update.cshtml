@model ApplicationRole
@{
    ViewData["Title"] = "Edit";
}


<h1>Update Role</h1>
<br />
<br />



      <div class="row ">

        <div class="col-6">
        <div class="my-3">
                <a class="btn btn-info" asp-action="AddOrRemoveUsers" asp-controller="Roles" asp-route-RoleId="@Model.Id">Add Or Remove Users</a>
            </div>
            <form asp-action="Update" asp-controller="Roles">
             @Html.ValidationSummary(true,"",new {@class="text-danger"})
                <input hidden asp-for="Id"/>
                <Partial name="PartialViews/CreateUpdatePartialView" model="@Model"/>
                <br/>
                <input type="submit" value="Save" class="btn btn-primary " />
                <a asp-action="Index" class=" btn btn-light">Back To List</a>
            </form>
        </div>
      </div>
 
 
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    }