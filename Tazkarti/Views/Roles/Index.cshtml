@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "Index";
}
<style>
  .searchClass{
    display:flex;
    justify-content:center;

  }
</style>
<h1>All Roles</h1>

<br/>
<a asp-action="Create" class="btn btn-primary">Create New Role</a>
<br/>
<br/>


@if(Model?.Count() > 0){
    <table class="table table-stripped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreateAt</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)  
            {
                <tr> 
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@Html.DisplayFor(m=>item.CreateAt.Day)-@Html.DisplayFor(m=>item.CreateAt.Month)-@Html.DisplayFor(m=>item.CreateAt.Year)</td>
                   <partial name="_ButtonsPartialView" model="item.Id"/>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class=" alert alert-warning">
        <h2>No Users Found!!</h2>
    </div>
}
