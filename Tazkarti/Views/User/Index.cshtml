@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>

<br/>

<form class="my-3" asp-action="Index" asp-controller="User">
     <div class="row">
            <div class="col-sm-8">
                <input name="SearchValue" placeholder="Search By Email" class="form-control" />
            </div>
            <div class="col-sm-4">
                <input type="submit" value="Search" class="btn btn-success btn-block" />
            </div>
      </div>
</form>

@if(Model?.Count() > 0){
    <table class="table table-stripped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Email</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)  
            {
                <tr> 
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                   <partial name="_ButtonsPartialView" model="user.Id.ToString()"/>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class=" alert alert-warning">
        <h2>No Users Found!!</h2>
    </div>
}
