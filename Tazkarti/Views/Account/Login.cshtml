@model SignInViewModel
@{
    // ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-container">
    <div class="form-container">
        <h2 class="form-title">Sign In</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="input-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input class="form-control" type="email" asp-for="Email" placeholder="Email" required>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="input-group">
                <label asp-for="Password" class="form-label">Password</label>
                <input class="form-control" type="password" asp-for="Password" placeholder="Password" required>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label class="checkbox-label">
                    <input type="checkbox" asp-for="RememberMe">
                    <span>Remember Me</span>
                </label>
            </div>
            <button type="submit" class="btn-success">SIGN IN</button>
            <p>Don't have an Account? <a asp-action="SignUp" class="link-success">Register Now!</a></p>
            <p><a asp-action="ForgetPassword" asp-controller="Account" class="link-success">Forgot Password?</a></p>
        </form>
    </div>
</div>
